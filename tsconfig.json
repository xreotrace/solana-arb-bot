{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs", // ðŸ‘ˆ Important change
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs" // ðŸ‘ˆ Force CommonJS for ts-node
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
